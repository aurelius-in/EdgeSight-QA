{
  "title": "EdgeSight QA",
  "panels": [
    {
      "type": "graph",
      "title": "Results Received",
      "targets": [ { "expr": "rate(results_received_total[1m])" } ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Capture Latency (ms)",
      "targets": [ { "expr": "histogram_quantile(0.95, sum(rate(capture_latency_est_ms_bucket[1m])) by (le))" } ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    }
    ,
    {
      "type": "graph",
      "title": "Capture FPS",
      "targets": [ { "expr": "capture_fps" } ],
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Dropped Frames",
      "targets": [ { "expr": "rate(capture_frames_dropped_total[1m])" } ],
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Publishes (MQTT/OPC UA)",
      "targets": [
        { "expr": "rate(mqtt_published_total[1m])" },
        { "expr": "rate(opcua_published_total[1m])" }
      ],
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "E2E Latency p95/p99 (ms)",
      "targets": [
        { "expr": "histogram_quantile(0.95, sum(rate(e2e_latency_ms_bucket[1m])) by (le))" },
        { "expr": "histogram_quantile(0.99, sum(rate(e2e_latency_ms_bucket[1m])) by (le))" }
      ],
      "fieldConfig": { "defaults": { "custom": { "exemplars": { "color": "rgba(255,0,0,0.7)", "line": true } } } },
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 }
    }
    ,
    {
      "type": "nodeGraph",
      "title": "Service Map",
      "gridPos": { "x": 0, "y": 24, "w": 24, "h": 10 },
      "options": {
        "datasource": "Tempo",
        "tracesToMetrics": { "datasource": "Prometheus" }
      }
    }
  ],
  "schemaVersion": 36,
  "version": 1
}


